                    <match url="^[a-zA-Z0-9_\-]+\.js\.logs\/\d+\.txt$"/>
                </rule>
                <rule name="StaticContent">
                    <action type="Rewrite" url="bundle/programs/web.browser{REQUEST_URI}"/>
